<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna latar belakang EditText -->
    <solid android:color="@color/colorSurface" />

    <!-- Border tipis di sekeliling -->
    <stroke
        android:width="1dp"
        android:color="@color/colorDivider" />

    <!-- Radius sudut untuk melengkungkan pojok -->
    <corners android:radius="8dp" />

    <!-- Padding di dalam EditText -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
